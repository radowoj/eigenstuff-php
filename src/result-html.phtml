    <body>
        <table>
            <tr>
            <th> - </th>
            <?php foreach(array_keys($results) as $item):?>
                <th class="toItem">to: <?=$item?></th>
            <?php endforeach;?>
            </tr>

            <?php foreach($results as $fromItem => $toItemsArray):?>
                <tr>
                    <th class="fromItem">from: <?= $fromItem ?></th>
                    <?php foreach($toItemsArray as $toItem => $count): ?>
                        <td>
                            <?php if ($toItem === $fromItem): ?>
                                -
                            <?php else:?>
                                <?= $count; ?>
                            <?php endif;?>
                        </td>
                    <?php endforeach;?>
                </tr>
            <?php endforeach;?>
        </table>
    </body>
